services:
  - type: web
    name: singsync-backend
    env: python
    plan: standard
    buildCommand: |
      pip install --upgrade pip
      pip install -r requirements.txt
    startCommand: uvicorn app:app --host 0.0.0.0 --port $PORT
    envVars:
      - key: PYTHON_VERSION
        value: 3.11.9
      - key: SSE_TIMEOUT_SEC
        value: 60
      - key: OPENAI_API_KEY
        sync: false
      - key: GENIUS_API_TOKEN
        sync: false
      - key: ARCCLOUD_ACCESS_KEY
        sync: false
      - key: ARCCLOUD_ACCESS_SECRET
        sync: false
      - key: ARCCLOUD_HOST
        sync: false